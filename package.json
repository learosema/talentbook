{
  "name": "talentbook",
  "version": "1.0.0",
  "description": "A platform for finding teams and mentors",
  "workspaces": [
    "packages/frontend",
    "packages/backend"
  ],
  "scripts": {
    "backend": "npm start -w packages/backend",
    "frontend": "npm start -w packages/frontend",
    "smtp4dev": "docker run --rm -it -p 127.0.0.1:8025:80 -p 127.0.0.1:25:25 rnwood/smtp4dev",
    "all": "concurrently npm:backend npm:frontend",
    "build": "lerna run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terabaud/talentbook.git"
  },
  "keywords": [
    "teambuilding",
    "socialcoding",
    "mentoring"
  ],
  "author": "Lea Rosema",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/terabaud/talentbook/issues"
  },
  "homepage": "https://github.com/terabaud/talentbook#readme",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
